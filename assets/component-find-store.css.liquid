.find-store {
  background-image: url({{"find-store-bg.svg"|asset_url}});
}

.find-store-wrapper{
text-align:center;
display: inline-block;
margin:auto;
padding:50px;
border: 10px solid #FFF;
background:#191919;
}

@media(max-width:749px){
  .find-store-wrapper { 
    width: 100%;
    max-width: 500px;
}

 .find-store-wrapper .hxl{ font-size:90px;}

}


@media(max-width:500px){
  
 .find-store-wrapper .hxl{ font-size:80px;}

}