:root {
  --font-heading-family: "PhonkContrast";
}

.text-primary {
  color: #ea3323 !important;
}

h1,
h2,
h3,
h4,
h5,
h6,
.h1,
.h2,
.h3,
.h4,
.h5,
.h6 {
  font-family: "PhonkContrast";
  color: #fff;
  font-weight: 600;
  font-style: normal;

  line-height: normal;
}

h1,
.h1 {
  font-size: 200px;
}

h2,
.h2 {
  font-size: 136px;
}

h3,
.h3 {
  font-size: 84px;
}

h4,
.h4 {
  font-size: 58px;
}

h5,
.h5 {
  font-size: 42px;
}
.caption-text {
  letter-spacing: 0.831px;
}
mark {
  -webkit-text-stroke-width: 2px;
  -webkit-text-stroke-color: #ea3323;
  text-stroke-width: 2px;
  text-stroke-color: #ea3323;
  font-size: 83.145px;
  font-weight: 900;
  background: transparent;
  font-style: italic;
}

.caption-bar {
  position: relative;
}

.caption-bar::after {
  content: "";
}

.list-menu {
  font-family: "PhonkContrast";
}

.list-menu a {
  font-size: 2.6rem;
  color: #fff;
}

.full-width {
  width: 100% !important;
  max-width: 100% !important;
}

.header__menu-item {
  padding: 1.6rem;
}

.page-width-full {
  width: 100%;
  max-width: 100%;
}

/* min device off 990px */
@media screen and (min-width: 990px) {
  .header--middle-left {
    grid-template-columns: auto;
  }
  .header__inline-menu {
    text-align: center;
  }
  header.header {
    padding-top: 1.6rem;
    padding-bottom: 1.6rem;
  }
}
