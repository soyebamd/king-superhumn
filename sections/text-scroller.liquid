{{ 'text-scroller.css.liquid' | asset_url | stylesheet_tag }}



<div class="text-scroller color-{{ section.settings.color_scheme }} gradient"     >



<ul class="text-scroller-items">

  {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'text' -%}

           <li {{ block.shopify_attributes }} class="heading" >  {{ block.settings.scroll_text }} </li>

            {% endcase %}

        {% endfor %}


</ul>


</div>
    
    

 
{% schema %}
{
  "name": "Text Scroller",
  "tag": "section",
  "class": "section scroller",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Add text as a block"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Choose Color",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "name": "text",
      "type": "text",
      "settings": [
       {
          "type": "text",
          "id": "scroll_text",
          "default": "t:sections.image-with-text.blocks.caption.settings.text.default",
           "label": "Scroll text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text Scroller",
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}

{% endschema %}