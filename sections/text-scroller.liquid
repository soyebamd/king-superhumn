<div class="text-scroller color-{{ section.settings.color_scheme }} gradient">


</div>

{% schema %}
{
  "name": "Text Scroller",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Add text as a block"
    },
    {
      "type": "color_scheme",
      "id": "color",
      "label": "Choose Color",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "name": "text",
      "type": "text",
      "settings": [
       {
          "type": "text",
          "id": "scroll_text",
          "default": "t:sections.image-with-text.blocks.caption.settings.text.default",
           "label": "Scroll text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text Scroller",
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}

{% endschema %}